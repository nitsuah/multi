#!/usr/bin/env sh
set -e

echo "ğŸ” Running pre-push validation (same as CI)..."

# Source nvm if it exists
if [ -f "$HOME/.nvm/nvm.sh" ]; then
    . "$HOME/.nvm/nvm.sh"
fi

# Add common Windows Node.js paths
export PATH="$PATH:/c/Program Files/nodejs:/c/Program Files (x86)/nodejs"
export PATH="$PATH:$APPDATA/npm:$HOME/AppData/Roaming/npm"

# Run CI checks
if command -v npm >/dev/null 2>&1; then
    echo "âœ“ Running typecheck..."
    npm run typecheck || exit 1
    
    echo "âœ“ Running lint..."
    npm run lint || exit 1
    
    echo "âœ“ Running tests..."
    npm run test:ci || exit 1
    
    echo "âœ… All pre-push checks passed!"
else
    echo "âš ï¸  WARNING: npm not found. Skipping pre-push checks."
    echo "   Run manually: npm run ci"
fi
